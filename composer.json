{
    "name": "dij-digital/langfuse-laravel",
    "description": "This is my package langfuse-laravel",
    "keywords": [
        "DIJ Digital",
        "laravel",
        "langfuse"
    ],
    "homepage": "https://github.com/dij-digital/langfuse-laravel",
    "license": "MIT",
    "authors": [
        {
            "name": "Tycho Engberink",
            "email": "tycho.engberink@dij.digital",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3||^8.4",
        "dij-digital/langfuse-php": "^0.1.4",
        "illuminate/contracts": "^11.0||^12.0",
        "spatie/laravel-package-tools": "^1.16"
    },
    "require-dev": {
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1.1||^7.10.0",
        "orchestra/testbench": "^10.0.0||^9.0.0||^8.22.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-arch": "^3.0",
        "pestphp/pest-plugin-faker": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpstan/extension-installer": "^1.3||^2.0",
        "phpstan/phpstan-deprecation-rules": "^1.1||^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "rector/rector": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "DIJ\\Langfuse\\Laravel\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DIJ\\Langfuse\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "format": "@php vendor/bin/pint --config https://raw.githubusercontent.com/DIJ-digital/pint-config/main/pint.json",
        "lint": "pint",
        "refactor": "rector",
        "codestyle": [
            "@lint",
            "@refactor"
        ],
        "test:lint": "@php vendor/bin/pint --config https://raw.githubusercontent.com/DIJ-digital/pint-config/main/pint.json",
        "test:unit": "pest",
        "test:types": "phpstan",
        "test:refactor": "rector --dry-run",
        "test": [
            "@test:refactor",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "DIJ\\Langfuse\\Laravel\\LangfuseServiceProvider"
            ],
            "aliases": {
                "Langfuse": "DIJ\\Langfuse\\Laravel\\Facades\\Langfuse"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
